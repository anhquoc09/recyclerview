<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/profileListItem">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/itemAvatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/itemDisplayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/itemAvatar"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/itemAvatar"
        android:layout_toRightOf="@+id/itemAvatar"
        android:text="Name"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="115dp" />

    <TextView
        android:id="@+id/itemUserID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemDisplayName"
        android:layout_alignStart="@+id/itemDisplayName"
        android:layout_alignBottom="@+id/itemAvatar"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:text="ID"
        android:textSize="12sp"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemDisplayName"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="115dp"
        android:layout_alignLeft="@+id/itemDisplayName" />

</RelativeLayout>